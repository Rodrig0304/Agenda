GET     /                 controllers.HomeController.index

GET     /assets/*file       controllers.Assets.versioned(path="/public", file: Asset)

# Rutas para Contactos
GET     /contactos         controllers.ContactoController.listarContactos
POST    /contactos         controllers.ContactoController.crearContacto(request: play.mvc.Http.Request)
GET     /contactos/categoria/:id    controllers.ContactoController.obtenerContactosPorCategoria(id: Long)
GET     /contactos/sin-categoria    controllers.ContactoController.obtenerContactosSinCategoria

